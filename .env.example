# Camera Configuration
# IP address of the actual ONVIF camera
CAMERA_IP=127.0.0.1

# Port of the actual ONVIF camera
CAMERA_PORT=8000

# Camera credentials
CAMERA_USER=admin
CAMERA_PASS=admin

# WSDL directory (usually don't need to change this in Docker)
WSDL_DIR=/usr/local/lib/python3.12/site-packages/wsdl

# Proxy Server Configuration
# Host to bind to (0.0.0.0 = all interfaces)
PROXY_HOST=0.0.0.0

# Port for the proxy server to listen on
PROXY_PORT=8000

# External hostname/IP that clients will use to connect
# This should be the IP address of the machine running the proxy
PROXY_EXTERNAL_HOST=127.0.0.1

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# PTZ Server Configuration (for ptz_server.py)
# Host to bind to
PTZ_SERVER_HOST=0.0.0.0

# Port for the PTZ server to listen on
PTZ_SERVER_PORT=5001
